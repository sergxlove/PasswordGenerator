<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="600"
		Height="570"
        x:Class="PasswordGenerator.MainWindow"
        Title="PasswordGenerator">
	<Window.Styles>
		<Style Selector="Window">
			<Setter Property="FontFamily" Value="Segoe UI"/>
		</Style>
		<Style Selector="TextBlock#header">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
		</Style>
		<Style Selector="Button#generateButton">
			<Setter Property="Background" Value="#FF4A86E8"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Padding" Value="15 5"/>
			<Setter Property="Margin" Value="0 15 0 0"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>
		<Style Selector="Button#copyButton">
			<Setter Property="Background" Value="#FF6AA84F"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Padding" Value="10 5"/>
		</Style>
	</Window.Styles>
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="header"
				   Grid.Row="0"
				   Text="Генератор паролей"
                   HorizontalAlignment="Center"
                   FontSize="22" 
				   FontWeight="Bold" 
				   Margin="0 0 0 20"/>
		<Border Grid.Row="1" 
				BorderBrush="#FFCCCCCC" 
				BorderThickness="1"
                CornerRadius="5" 
				Padding="10" 
				Margin="0 0 0 15">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBlock x:Name="PasswordText"
						  Grid.Column="0"
                          Text="Нажмите 'Сгенерировать'"
                          FontSize="16" 
						  TextWrapping="Wrap"
						  VerticalAlignment="Center"/>
				<Button x:Name="CopyButton" 
						Grid.Column="1" 
						Content="Копировать"
                        Width="100" 
						Margin="10 0 0 0"
                        x:FieldModifier="public"
						Click="CopyPasswordButtonHandler"/>
			</Grid>
		</Border>
		<StackPanel Grid.Row="2" 
					Orientation="Vertical" 
					Margin="0 0 0 15">
			<TextBlock Text="Длина пароля"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Slider x:Name="LengthSlider" 
						Grid.Column="0"
                        Minimum="5" 
						Maximum="128" 
						Value="12"
						ValueChanged="ChangedSliderValueHandler"
                        x:FieldModifier="public"/>
				<TextBlock x:Name="LengthValue" 
						   Grid.Column="1"
						   Text="12" 
						   Margin="10 0 0 0"
                           VerticalAlignment="Center" 
						   MinWidth="30"/>
			</Grid>
		</StackPanel>
		<StackPanel Grid.Row="3" 
					Orientation="Vertical" 
					Margin="0 0 0 15">
			<TextBlock Text="Настройки пароля"/>
			<CheckBox x:Name="UppercaseCheck" 
					  Content="Заглавные буквы (A-Z)"
                      IsChecked="True" 
					  Margin="0 5"
                      x:FieldModifier="public"/>
			<CheckBox x:Name="LowercaseCheck" 
					  Content="Строчные буквы (a-z)"
					  IsChecked="True" 
					  Margin="0 5"
                      x:FieldModifier="public"/>
			<CheckBox x:Name="NumbersCheck" 
					  Content="Цифры (0-9)"
                      IsChecked="True" 
					  Margin="0 5"
                      x:FieldModifier="public"/>
			<CheckBox x:Name="SymbolsCheck"
					  Content="Спецсимволы (*@#()$)"
                      IsChecked="False" 
					  Margin="0 5"
                      x:FieldModifier="public"/>
		</StackPanel>
		<Button Grid.Row="4" 
				x:Name="GenerateButton" 
				Click="GeneratePasswordButtonHandler"
				Content="Сгенерировать пароль"
                HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
                x:FieldModifier="public"/>
		<StackPanel Grid.Row="5" 
					Orientation="Vertical" 
					Margin="0 15 0 0">
			<TextBlock Text="Сложность пароля"/>
			<Grid Height="10" Margin="0 5 0 0">
				<Rectangle x:Name="FullStrengthIndicator"
					RadiusX="3" 
					RadiusY="3" 
					Fill="#FFEEEEEE" />
				<Rectangle x:Name="StrengthIndicator" 
						   RadiusX="3" RadiusY="3"
                           HorizontalAlignment="Left" 
						   Width="0" 
						   Fill="#FF34A853"/>
			</Grid>
			<TextBlock x:Name="StrengthText" 
					   Text="Низкая" 
					   HorizontalAlignment="Center"
                       Margin="0 5 0 0" 
					   FontWeight="SemiBold"/>
		</StackPanel>
	</Grid>
</Window>


